@model ProductDto

@{
    if (Model?.ProductAccessories is not null)
    {
        for (var i = 0; i < Model.ProductAccessories.Count; i++)
        {
            <li class='list-group-item'>
                <div class='d-flex align-items-center'>
                    <div class='flex-shrink-0'>
                        <input asp-for="ProductAccessories[i].AccessoryId" type="hidden" />
                    </div>
                    <div class='flex-grow-1 ms-2'>
                        @Model.ProductAccessories[i].Accessory?.Name
                    </div>
                    <div class='flex-grow-2 ms-2' style='position:relative;right:40%;'>
                        <div class='input-group'>
                            <input class='form-control' asp-for="ProductAccessories[i].Quantity" />
                            <span class='input-group-text'>@Model.ProductAccessories[i].Accessory?.MeasurementType</span>
                            <span asp-validation-for="ProductAccessories[i].Quantity" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </li>
        }
    }
}