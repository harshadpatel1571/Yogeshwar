@{
    var isCreate = Model?.Id == 0;
    var addOrEdit = isCreate
        ? "Add"
        : "Edit";

    ViewData["Title"] = $"{addOrEdit} Order";

    Layout = "_Layout";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Order</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item">Order</li>
                    <li class="breadcrumb-item active">@addOrEdit</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h5 class="card-title mb-0 flex-grow-1">Order</h5>
                <div>
                    <a asp-action="Index" class="btn btn-primary btn-label waves-effect waves-light">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <i class="ri-arrow-left-line label-icon align-middle fs-16 me-2"></i>
                            </div>
                            <div class="flex-grow-1">
                                Go to List
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <form class="needs-validation" asp-action="AddEdit" enctype="multipart/form-data">
                <div class="card-body row g-3">
                    <div class="col-md-6">
                        <label class="form-label">First Name</label>
                        <span class="text-danger">*</span>
                        <select class="js-example-disabled" name="state">
                            <option value="">Select</option>
                            <option value="AL">Harshad</option>
                            <option value="MA">Soham</option>
                            <option value="TO">Vaibhav</option>
                            <option value="LO">Aesha</option>
                            <option value="WY">Bhoomi</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Order Date</label>
                        <span class="text-danger">*</span>
                        <input type="date" class="form-control">
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Discount</label>
                        <div class="input-group">
                            <input type="text" class="form-control" aria-describedby="basic-addon2">
                            <span class="input-group-text" id="basic-addon2">%</span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Status</label>
                        <span class="text-danger">*</span>
                        <select class="js-example-disabled" name="status">
                            <option value="">Pending</option>
                            <option value="AL">InProgress</option>
                            <option value="AL">Completed</option>
                        </select>
                    </div>
                </div>
                <hr />
                <div id="orderDetail">
                    <div class="card product" id="productDiv_0">
                        <div class="card-body">
                            <div class="row gy-3">
                                <div class="col-sm-6" id="quantityAppend_0">
                                    <label class="form-label">Product</label>
                                    <span class="text-danger">*</span>
                                    <select class="form-control" required id="selectAccessories_0" onchange="reBindProduct(this)">
                                        <option value="">Select Product</option>
                                        <option value="1">Cycle</option>
                                        <option value="2">Bike</option>
                                        <option value="3">Car</option>
                                    </select>
                                    <div class="profile-user position-relative d-inline-block mx-auto m-3 me-4">
                                        <img id="image_0" src="~/images/users/avatar-1.jpg" class="rounded-squre avatar-xl img-thumbnail shadow" alt="accessories-image">
                                    </div>
                                    <div class="d-inline-block" id="quantityDiv_0">
                                        <label>Quantity</label><br />
                                        <div class="input-step light">
                                            <button type="button" id="minusButton_0" onclick="minusQuantity(this)" class="minus shadow">–</button>
                                            <input type="number" id="quantity_0" class="product-quantity" value="1" disabled>
                                            <button type="button" id="plusButton_0" onclick="plusQuantity(this)" class="plus shadow">+</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6" id="accessioriesStock_0">
                                    <label class="form-label">Confirm Accessiories Stock</label> <br />
                                    <ul class="list-group" id="product_accessories_0">
                                        <li class="list-group-item" aria-disabled="true">
                                            <div class="row">
                                                <div class="col-sm-6">
                                                    <div class="d-flex align-items-center">
                                                        <div class="flex-shrink-0" style="padding: 6px;">
                                                            <input class="form-check-input" type="checkbox">
                                                        </div>
                                                        <div class="flex-shrink-0">
                                                            <img src="~/images/users/avatar-1.jpg" alt="" class="avatar-xs rounded-circle">
                                                        </div>
                                                        <div class="flex-grow-1 ms-2">
                                                            James Ballard
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-6">
                                                    <div class="d-flex align-items-center">
                                                        <div class="flex-shrink-0" style="padding: 6px;">
                                                            <input class="form-check-input" type="checkbox">
                                                        </div>
                                                        <div class="flex-shrink-0">
                                                            <img src="~/images/users/avatar-1.jpg" alt="" class="avatar-xs rounded-circle">
                                                        </div>
                                                        <div class="flex-grow-1 ms-2">
                                                            James Ballard
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="row align-items-center gy-3">
                                <div class="col-sm">
                                    <div class="d-flex flex-wrap my-n1">
                                        <div>
                                            <a class="btn d-block text-body p-1 px-2" id="removeButton_0" onclick="removeModule(this)"><i class="ri-delete-bin-fill text-muted align-bottom me-1"></i> Remove</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-auto">
                                    <div class="d-flex align-items-center gap-2 text-muted">
                                        <div>Product Price :</div>
                                        <h5 class="fs-14 mb-0">$<span class="product-line-price">119.99</span></h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-body row g-3">
                    <div class="row align-items-center gy-3">
                        <div class="col-sm">
                            <div class="d-flex flex-wrap my-n1">
                                <button id="addButton" type="button" class="btn btn-info btn-label waves-effect waves-light">
                                    <i class="ri-add-fill label-icon align-middle fs-16 me-2"></i>
                                    Add Product
                                </button>
                            </div>
                        </div>
                        <div class="col-sm-auto" style="position:relative;left:2.4%">
                            <div class="d-flex align-items-center gap-2 text-muted">
                                <div>Total Amount :</div>
                                <h5 class="fs-14 mb-0">$<span class="product-line-price">199.99</span></h5>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-body row g-3">
                    <div class="col-12">
                        <button type="submit" class="btn btn-secondary btn-label waves-effect waves-light">
                            <i class="ri-check-double-line label-icon align-middle fs-16 me-2"></i>
                            Save
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/custom/orderaddedit.js"></script>
}