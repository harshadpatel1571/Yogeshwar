<div class="row g-3 needs-validation">
    <div class="col-md-6">
        <label class="form-label">Accessories Name</label>
        <span class="text-danger">*</span>
        <input class="form-control" id="AccesoryName" maxlength="100" required>
        <span id="ValidationAccesoryName" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label class="form-label">Quantity</label>
        <span class="text-danger">*</span>
        <input class="form-control" id="AccesoryQuantity" required>
        <span id="ValidationAccesoryQuantity" class="text-danger"></span>
    </div>
    <div class="col-md-12">
        <label class="form-label">Description</label>
        <textarea class="form-control ckeditor-classic" id="AccesoryDescription" rows="2" maxlength="250"></textarea>
        <span id="ValidationAccesoryDescription" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label class="form-label">Upload Image <span class="text-info">(Only images are allowed.)</span></label>
        <input class="form-control md-2" id="AccesoryFile" type="file" onchange="showImage(this)" accept="image/*">
        <div class="profile-user position-relative d-inline-block mx-auto mt-3" id="AccesoryImageDiv">
        </div>
    </div>
    <div class="col-12">
        <button type="button" class="btn btn-secondary btn-label waves-effect waves-light" onclick="saveAccessories()">
            <i class="ri-check-double-line label-icon align-middle fs-16 me-2"></i>
            Save
        </button>
    </div>
</div>