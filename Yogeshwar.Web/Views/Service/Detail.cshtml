@model ServiceDto
@{
    ViewData["Title"] = "Detail Service";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Service</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item">Service</li>
                    <li class="breadcrumb-item active">Detail</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <h5 class="card-title mb-0 flex-grow-1">Service</h5>
                <div>
                    <a asp-action="Index" class="btn btn-primary btn-label waves-effect waves-light">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <i class="ri-arrow-left-line label-icon align-middle fs-16 me-2"></i>
                            </div>
                            <div class="flex-grow-1">
                                Go to List
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            </>
            <div class="card-body row g-3">
                <div class="col-md-6">
                    <label class="form-label">Worker Name</label>
                    <label class="form-control">@Model.WorkerName</label>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Customer Name</label>
                    <label class="form-control">@Model.CustomerName</label>
                </div>

                <div class="col-md-12">
                    <label class="form-label">Description</label>
                    <label class="form-control">@Model.Description</label>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Complain Date</label>
                    <label class="form-control">@Model.ComplainDate</label>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Completed Date</label>
                    <label class="form-control">@Model.CompletedDate?.ToString("dd-MM-yyyy")</label>
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">Status</label>
                    <label class="form-control">@Model.ServiceStatus</label>
                </div>

            </div>
        </div>
    </div>
</div>