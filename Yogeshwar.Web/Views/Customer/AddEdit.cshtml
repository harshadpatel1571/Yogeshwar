@using System.Text.Json
@model CustomerDto
@{
    var addOrEdit = Model is null
        ? "Add"
        : "Edit";

    ViewData["Title"] = $"{addOrEdit} Customer";

    Layout = "_Layout";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Customer</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item">Customer</li>
                    <li class="breadcrumb-item active">@addOrEdit</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <form class="needs-validation" asp-action="AddEdit" enctype="multipart/form-data">
            <div class="card">
                <div class="card-header d-flex align-items-center">
                    <h5 class="card-title mb-0 flex-grow-1">Customer</h5>
                    <div>
                        <a asp-action="Index" class="btn btn-primary btn-label waves-effect waves-light">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="ri-arrow-left-line label-icon align-middle fs-16 me-2"></i>
                                </div>
                                <div class="flex-grow-1">
                                    Go to List
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="card-body row g-3">
                    <input class="form-control" asp-for="Id" type="hidden" readonly>
                    <input asp-for="Image" type="hidden">
                    <div class="col-md-6">
                        <label class="form-label">First Name</label>
                        <span class="text-danger">*</span>
                        <input class="form-control" asp-for="FirstName" maxlength="50" required>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Last Name</label>
                        <span class="text-danger">*</span>
                        <input class="form-control" asp-for="LastName" maxlength="50" required>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Email Address</label>
                        <input class="form-control" asp-for="Email" maxlength="100">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Mobile number</label>
                        <span class="text-danger">*</span>
                        <input class="form-control" asp-for="PhoneNo" type="number" required>
                        <span asp-validation-for="PhoneNo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">GST Number</label>
                        <input class="form-control" asp-for="GstNumber" maxlength="15" required>
                        <span asp-validation-for="GstNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Upload Image <span class="text-info">(Only images are allowed.)</span></label>
                        <input class="form-control md-2" asp-for="ImageFile" accept="image/*">
                        <div class="profile-user position-relative d-inline-block mx-auto mt-3" id="ImageDiv">
                            @if (Model?.Image is null)
                            {
                                @*<img id="imageContainer" src="~/images/users/avatar-1.jpg" class="rounded-squre avatar-xl img-thumbnail shadow" alt="accessories-image">*@
                            }
                            else
                            {
                                <img id="imageContainer" src="@Model.Image" class="rounded-squre avatar-xl img-thumbnail shadow" alt="accessories-image">
                                <div class="avatar-xs p-0 rounded-circle profile-photo-edit">
                                    <label for="profile-img-file-input" class="profile-photo-edit avatar-xs" onclick='deleteImage()'>
                                        <span class="avatar-title rounded-circle bg-light text-body shadow">
                                            <i class="ri-delete-bin-line"></i>
                                        </span>
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header d-flex align-items-center">
                    <h5 class="card-title mb-0 flex-grow-1">Customer Address</h5>
                    <div>
                        <button type="button" class="btn btn-primary btn-label waves-effect waves-light" data-bs-toggle="modal" data-bs-target="#addressModal">
                            <div class="d-flex">
                                <div class="flex-shrink-0">
                                    <i class="ri-add-circle-line label-icon align-middle fs-16 me-2"></i>
                                </div>
                                <div class="flex-grow-1">
                                    Add Address
                                </div>
                            </div>
                        </button>
                    </div>
                </div>
                <div class="card-body row g-3" id="addressDiv">
                    @if (Model?.CustomerAddresses is { Count: > 0 })
                    {
                        <input type="hidden" id="jsonDataHolder" disabled value="@JsonSerializer.Serialize(Model.CustomerAddresses, new JsonSerializerOptions { PropertyNamingPolicy = JsonNamingPolicy.CamelCase })"/>
                        @await Html.PartialAsync("_Address", Model)
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-header d-flex align-items-center">
                    <h5 class="card-title mb-0 flex-grow-1">Customer Bank Details</h5>
                </div>
                <div class="card-body row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Bank Holder Name</label>
                        <span class="text-danger">*</span>
                        <input class="form-control" asp-for="AccountHolderName" maxlength="50" required>
                        <span asp-validation-for="AccountHolderName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Bank Name</label>
                        <span class="text-danger">*</span>
                        <input class="form-control" asp-for="BankName" maxlength="25" required>
                        <span asp-validation-for="BankName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Account Number</label>
                        <span class="text-danger">*</span>
                        <input class="form-control" asp-for="AccountNumber" required>
                        <span asp-validation-for="AccountNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">IFSC Code</label>
                        <span class="text-danger">*</span>
                        <input class="form-control" asp-for="IfscCode" maxlength="11" required>
                        <span asp-validation-for="IfscCode" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Branch Name</label>
                        <span class="text-danger">*</span>
                        <input class="form-control" asp-for="BranchName" maxlength="50" required>
                        <span asp-validation-for="BranchName" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <button type="submit" class="btn btn-secondary btn-label waves-effect waves-light">
                            <i class="ri-check-double-line label-icon align-middle fs-16 me-2"></i>
                            Save
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@await Html.PartialAsync("_AddressPopup")

@section Scripts {
    <script src="~/js/custom/customeraddedit.js"></script>
}